[user]
  name = Jan Zernisch
  email = jan.zernisch@invision.de
[credential]
  helper = osxkeychain
[push]
  default = simple
[pull]
  rebase = false
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  ca = commit --amend
  ci = commit -v
  co = checkout
  create-branch = !sh -c 'git push origin HEAD:refs/heads/$1 && git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  delete-branch = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  merge-branch = !git checkout master && git merge @{-1}
  pr = !hub pull-request
  st = status
  up = !git fetch origin && git rebase origin/master
  s = status
  d = diff
  c = commit
  l = log
  lm = "!f() { git log --pretty='%h (%cr) - %s' --author='Jan Zernisch'  --since=1.week --no-merges; }; f"
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
[include]
  path = .gitconfig.local
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
